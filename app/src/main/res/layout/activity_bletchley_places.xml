<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_bletchley_homepage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/official2"
    tools:context="com.example.usman.bletcheypark.BletchleyPlaces">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true">

    </RelativeLayout>

    <Button
        android:id="@+id/mansion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:text="Manion"
        android:layout_below="@+id/mansion1"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/mansion1" />

    <Button
        android:id="@+id/hut8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:text="Hut 8"
        android:layout_above="@+id/hut12"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="12dp"
        android:layout_alignStart="@+id/hut81" />

    <Button
        android:id="@+id/blockb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/mansion"
        android:layout_alignBottom="@+id/mansion"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/blockb1"
        android:background="@color/colorAccent"
        android:text="Block B" />

    <Button
        android:id="@+id/hut11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/hut12"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/hut111"
        android:background="@color/colorAccent"
        android:text="Hut 11" />

    <Button
        android:id="@+id/hut121"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/hut12"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorAccent"
        android:text="Hut 12" />

    <Button
        android:id="@+id/hut12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/hut121"
        android:layout_alignParentStart="true"
        android:background="@drawable/rhut12" />

    <Button
        android:id="@+id/hut111"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rhut11"
        android:layout_alignBaseline="@+id/hut81"
        android:layout_alignBottom="@+id/hut81"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/mansion1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rmansion"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/blockb1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/mansion1"
        android:background="@drawable/rblockb" />

    <Button
        android:id="@+id/hut81"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rhut8"
        android:layout_above="@+id/hut8"
        android:layout_alignParentEnd="true" />


</RelativeLayout>

