<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_post_events"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background_material_red"
    tools:context="com.example.usman.bletcheypark.postEvents">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toStartOf="@+id/postEvent"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true">

    </RelativeLayout>



    <EditText
        android:id="@+id/eventName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="54dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:ems="10"
        android:textColor="@color/wallet_bright_foreground_holo_dark"
        android:hint="Event Name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/eventDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/eventDate"
        android:layout_below="@+id/eventDate"
        android:layout_marginTop="12dp"
        android:background="@null"
        android:backgroundTint="@color/colorPrimaryDark"
        android:gravity="top|left"
        android:hint="Description"
        android:textColor="@color/wallet_bright_foreground_holo_dark"
        android:inputType="textMultiLine"
        android:lines="6"
        android:overScrollMode="always"
        android:scrollHorizontally="false"
        android:scrollbarStyle="insideInset"
        android:scrollbars="vertical"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/eventURL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:backgroundTint="@color/colorPrimaryDark"
        android:hint="Event Image URL"
        android:textColor="@color/wallet_bright_foreground_holo_dark"
        android:inputType="textPersonName"
        android:layout_below="@+id/eventDescription"
        android:layout_alignStart="@+id/eventDescription" />

    <Button
        android:id="@+id/postEvent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="47dp"
        android:background="@color/colorAccent"
        android:onClick="register_register"
        android:text="POST EVENT"
        android:layout_below="@+id/eventURL"
        android:layout_alignStart="@+id/eventURL"
        android:layout_alignEnd="@+id/eventURL" />

    <EditText
        android:id="@+id/eventDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:ems="10"
        android:textColor="@color/wallet_bright_foreground_holo_dark"
        android:hint="Event Date"
        android:inputType="textPersonName"
        android:layout_below="@+id/eventName"
        android:layout_alignStart="@+id/eventName" />


</RelativeLayout>
