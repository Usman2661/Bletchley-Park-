<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/official2"
    android:fillViewport="true"> <!--IMPORTANT otherwise backgrnd img. will not fill the whole screen -->

    <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="3000px"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.usman.bletcheypark.BlockB">


        <Button
            android:id="@+id/scanPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="138dp"
            android:text="Scan Items"
            android:layout_alignTop="@+id/textView3"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/checkout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check Out"
            android:layout_alignBaseline="@+id/scanPage"
            android:layout_alignBottom="@+id/scanPage"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/scanPage"
            android:layout_marginTop="37dp"
            android:text="During the restoration work at Bletchley Park in 2014 wartime notes were found stuffed into the roof cracks of Hut 6. Visit Hut 12 to see them on exhibit.  "
            android:textColor="@color/bb_darkBackgroundColor"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView28"
            android:text="--Audio interviews and insights captured by the Bletchley Park Podcast during the restoration"
            android:textColor="@color/bb_darkBackgroundColor"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView29"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView30"
            android:text="--A fragment of a 1940’s teapot and glass bottles, including one for Chicory"
            android:textColor="@color/bb_darkBackgroundColor"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView31"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView33"
            android:text="--once were when Codebreakers worked there. Light-touch, interpretive exhibits allow visitors to experience how it was to work in wartime Bletchley Park."
            android:textColor="@color/bb_darkBackgroundColor"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView32"
            android:text="--A ‘time capsule’ left inside a door in Hut 11A"
            android:textColor="@color/bb_darkBackgroundColor"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView29"
            android:text="--Archaeological items, such as bricks from Block F (demolished in the 1980s)"
            android:textColor="@color/bb_darkBackgroundColor"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView20"
            android:text="--Parts of an Atlas, a pinboard, a fashion article from a magazine"
            android:textColor="@color/bb_darkBackgroundColor"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView26"
            android:text="--A Crittall window frame from Block C and two original wooden floorboards from Hut 6, hanging from the ceiling above the display cases"
            android:textColor="@color/bb_darkBackgroundColor"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView7"
            android:text="--The only known example of used Banbury sheets, a system devised by Alan Turing to help find the daily-changing Enigma settings. So-called because the stationery was printed in Banbury. Banburismus involved lining up two sheets of paper in which holes were punched over a light box, to help find possible settings. "
            android:textColor="@color/bb_darkBackgroundColor"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView35"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView31"
            android:text="Have You Seen:"
            android:textColor="@color/bb_darkBackgroundColor"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/checkout"
            android:layout_centerHorizontal="true"
            android:text="You Are Currently in Hut 12"
            android:textColor="@color/bb_darkBackgroundColor"
            android:textSize="24sp" />

        <WebView
            android:id="@+id/webView"
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:layout_below="@+id/textView35"
            android:layout_alignParentStart="true" />

    </RelativeLayout>
</ScrollView>







