
<ScrollView
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:background="@drawable/official2"
android:fillViewport="true"> <!--IMPORTANT otherwise backgrnd img. will not fill the whole screen -->

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/myText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:text="SetText"
        android:textColor="@color/bb_darkBackgroundColor"
        android:textSize="18sp"
        android:layout_below="@+id/audioButton"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/scanbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:text="Scan"
        android:layout_below="@+id/scan2"
        android:layout_alignStart="@+id/scan2" />

    <Button
        android:id="@+id/audioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/stopAudio"
        android:layout_alignBottom="@+id/stopAudio"
        android:layout_alignParentStart="true"
        android:background="@color/colorAccent"
        android:text="Listen Audio" />

    <Button
        android:id="@+id/stopAudio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/scanbutton"
        android:layout_alignBottom="@+id/scanbutton"
        android:layout_centerHorizontal="true"
        android:background="@color/colorAccent"
        android:text="Stop Audio" />

    <Button
        android:id="@+id/audio2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rstop"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/stopAudio" />

    <Button
        android:id="@+id/listen2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/rlisten" />

    <Button
        android:id="@+id/scan2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/audio2"
        android:layout_alignBottom="@+id/audio2"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="14dp"
        android:background="@drawable/rscans" />
</RelativeLayout>
</ScrollView>






